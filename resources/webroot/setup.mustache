{{> header-head}}
<body>
    <br>
    <h1 align="center">Welcome to RealDeviceMap!</h1>
    <h3 align="center">Please create an admin account.</h3>
    <div class="w-75" style="float: none; margin: 0 auto;">
        <form action="" method="post">
            <div class="form-group">
                <label for="username" {{#is_username_error}}class="text-danger"{{/is_username_error}}>Username</label>
                <input type="username" class="form-control {{#is_username_error}}is-invalid{{/is_username_error}}" id="username" name="username" value="{{username}}" required>
                {{#is_username_error}}<small class="text-danger">{{username_error}}</small>{{/is_username_error}}
            </div>

            <div class="form-group">
                <label for="email" {{#is_email_error}}class="text-danger"{{/is_email_error}}>Email</label>
                <input type="email" class="form-control {{#is_email_error}}is-invalid{{/is_email_error}}" id="email" aria-describedby="email" name="email" value="{{email}}" required>
                {{#is_email_error}}<small class="text-danger">{{email_error}}</small>{{/is_email_error}}
            </div>
            <div class="form-group">
                <label for="password" {{#is_password_error}}class="text-danger"{{/is_password_error}}>Password</label>
                <input type="password" class="form-control {{#is_password_error}}is-invalid{{/is_password_error}}" id="password" name="password" value="{{password}}" required>
                {{#is_password_error}}<small class="text-danger">{{password_error}}</small>{{/is_password_error}}
            </div>
            <div class="form-group">
                <label for="password-retype" {{#is_password_retype_error}}class="text-danger"{{/is_password_retype_error}}>Retype Password</label>
                <input type="password" class="form-control {{#is_password_retype_error}}is-invalid{{/is_password_retype_error}}" id="password-retype" name="password-retype" value="{{password-retype}}" required>
                {{#is_password_retype_error}}<small class="text-danger">{{password_retype_error}}</small>{{/is_password_retype_error}}
            </div>
            <div class="form-group">
                <label for="access-token" {{#is_access_token_error}}class="text-danger"{{/is_access_token_error}}>Access-Token</label>
                <input type="text" class="form-control {{#is_access_token_error}}is-invalid{{/is_access_token_error}}" id="access-token" aria-describedby="access-token-help" name="access-token" value="{{access-token}}" required>
                <small id="access-token-help" class="form-text text-muted">Check the first few lines of the latest log.</small>
                {{#is_access_token_error}}<small class="text-danger">{{access_token_error}}</small>{{/is_access_token_error}}
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary">Setup</button>
            {{#is_undefined_error}}<br><small class="text-danger">{{undefined_error}}</small>{{/is_undefined_error}}
        </form>
    </div>
    <br>
</body>
